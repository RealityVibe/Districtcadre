<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/detail_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bkg"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="105px"
        android:background="@drawable/title_bar"
        android:orientation="horizontal"
        android:paddingBottom="3px">

        <ImageView
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="70px"
            android:layout_marginRight="10px"
            android:padding="8px"
            android:src="@drawable/logo_white" />

        <TextView
            android:id="@+id/search_item"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/emty_shape"
            android:gravity="center"
            android:paddingLeft="20px"
            android:singleLine="true"
            android:text="党校"
            android:textColor="#fff"
            android:textSize="50px" />

        <TextView
            android:id="@+id/search_num"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:paddingLeft="20px"
            android:paddingBottom="20px"
            android:text="记录数：15"
            android:textColor="#fff"
            android:textSize="35px" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/change_button"
            android:layout_width="200px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50px"
            android:background="@drawable/shape_cadre_title"
            android:gravity="center"
            android:padding="2dp"
            android:text="切换视图"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/graphica_data"
            android:layout_width="240px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30px"
            android:layout_marginRight="20px"
            android:background="@drawable/shape_radius"
            android:drawableLeft="@drawable/graph_icon_48"
            android:gravity="center"
            android:padding="2dp"
            android:text="统计图表"
            android:textColor="#000" />

        <TextView
            android:id="@+id/back_btn"
            android:layout_width="200px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30px"
            android:layout_marginRight="20px"
            android:background="@drawable/shape_radius"
            android:gravity="center"
            android:padding="2dp"
            android:text="返回"
            android:textColor="#000" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/result_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="15px"
        android:paddingRight="15px">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="66"
            android:background="@drawable/searchresult_first"
            android:gravity="center"
            android:paddingTop="5px"
            android:paddingBottom="5px"
            android:text="姓\u3000名"
            android:textColor="@drawable/textcolor_white"
            android:textSize="26px" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="166"
            android:background="@drawable/searchresult_first"
            android:gravity="center"
            android:paddingTop="5px"
            android:paddingBottom="5px"
            android:text="现任职务"
            android:textColor="@drawable/textcolor_white"
            android:textSize="26px" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30"
            android:background="@drawable/searchresult_first"
            android:gravity="center"
            android:paddingLeft="3px"
            android:paddingTop="5px"
            android:paddingRight="3px"
            android:paddingBottom="5px"
            android:text="性别"
            android:textColor="@drawable/textcolor_white"
            android:textSize="26px" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="70"
            android:background="@drawable/searchresult_first"
            android:gravity="center"
            android:paddingTop="5px"
            android:paddingBottom="5px"
            android:text="出生年月"
            android:textColor="@drawable/textcolor_white"
            android:textSize="26px" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="100"
            android:background="@drawable/searchresult_first"
            android:gravity="center"
            android:paddingTop="5px"
            android:paddingBottom="5px"
            android:text="籍贯"
            android:textColor="@drawable/textcolor_white"
            android:textSize="26px" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="80"
            android:background="@drawable/searchresult_first"
            android:gravity="center"
            android:paddingTop="5px"
            android:paddingBottom="5px"
            android:text="全日制学历"
            android:textColor="@drawable/textcolor_white"
            android:textSize="26px" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="123"
            android:background="@drawable/searchresult_first"
            android:gravity="center"
            android:paddingTop="5px"
            android:paddingBottom="5px"
            android:text="毕业院校"
            android:textColor="@drawable/textcolor_white"
            android:textSize="26px" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="80"
            android:background="@drawable/searchresult_first"
            android:gravity="center"
            android:paddingTop="5px"
            android:paddingBottom="5px"
            android:text="最高学历"
            android:textColor="@drawable/textcolor_white"
            android:textSize="26px" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="70"
            android:background="@drawable/searchresult_first"
            android:gravity="center"
            android:paddingTop="5px"
            android:paddingBottom="5px"
            android:text="参加工作时间"
            android:textColor="@drawable/textcolor_white"
            android:textSize="26px" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="70"
            android:background="@drawable/searchresult_first"
            android:gravity="center"
            android:paddingTop="5px"
            android:paddingBottom="5px"
            android:text="入党时间"
            android:textColor="@drawable/textcolor_white"
            android:textSize="26px" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="70"
            android:background="@drawable/searchresult_first"
            android:gravity="center"
            android:paddingLeft="3px"
            android:paddingTop="5px"
            android:paddingRight="3px"
            android:paddingBottom="5px"
            android:text="任现职时间"
            android:textColor="@drawable/textcolor_white"
            android:textSize="26px" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="70"
            android:background="@drawable/searchresult_first"
            android:gravity="center"
            android:paddingTop="5px"
            android:paddingBottom="5px"
            android:text="分管"
            android:textColor="@drawable/textcolor_white"
            android:textSize="26px" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:background="@drawable/searchresult_first"
            android:gravity="center"
            android:paddingTop="5px"
            android:paddingBottom="5px"
            android:text="备注"
            android:textColor="@drawable/textcolor_white"
            android:textSize="26px" />


    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/result_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:paddingLeft="15px"
        android:paddingRight="15px">

    </android.support.v7.widget.RecyclerView>


</LinearLayout>
